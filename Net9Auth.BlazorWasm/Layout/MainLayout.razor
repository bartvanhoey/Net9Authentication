        <NavMenu/>
    </div>

    <main>
        <div class="top-row px-2">
            <AuthorizeView>
                <Authorized>
                    <NavLink class="nav-link" href="Account/Manage/Profile">
                        @context.User.Identity?.Name
                    </NavLink>
                </Authorized>
            </AuthorizeView>
            <UserProfileButton/>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
